<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/search_list_item_background"
        android:elevation="10dp">

        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/mapo"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/betweenRankTextViewAndSearchSentence"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/rankTextView" />

        <TextView
            android:id="@+id/searchSentenceTextViewSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="searchSentence"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/betweenRankTextViewAndSearchSentence"
            app:layout_constraintRight_toLeftOf="@id/betweenSearchSentenceTextViewAndSearchScoreTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/betweenSearchSentenceTextViewAndSearchScoreTextView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/searchSentenceTextViewSearchResult" />

        <TextView
            android:id="@+id/searchScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="score"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/betweenSearchSentenceTextViewAndSearchScoreTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>